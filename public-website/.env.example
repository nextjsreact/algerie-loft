# Public Website Environment Variables

# Application Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_INTERNAL_APP_URL=https://app.your-domain.com
NODE_ENV=production

# CMS Configuration (Sanity.io)
NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your_sanity_api_token
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Database Configuration (for contact forms and analytics)
DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_URL_POOLED=postgresql://user:password@host:port/database?pgbouncer=true

# Email Configuration (for contact forms)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@your-domain.com

# Analytics and Monitoring
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Performance Monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS=true
NEXT_PUBLIC_SPEED_INSIGHTS=true

# Internationalization
NEXT_PUBLIC_DEFAULT_LOCALE=fr
NEXT_PUBLIC_LOCALES=fr,en,ar

# Security
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=https://your-domain.com

# Feature Flags
NEXT_PUBLIC_BLOG_ENABLED=true
NEXT_PUBLIC_PORTFOLIO_ENABLED=true
NEXT_PUBLIC_CONTACT_FORMS_ENABLED=true
NEXT_PUBLIC_NEWSLETTER_ENABLED=true

# External Services
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Uptime Monitoring
UPTIME_ROBOT_API_KEY=your-uptimerobot-api-key
PINGDOM_API_KEY=your-pingdom-api-key

# Social Media
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/your-page
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/your-account
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/your-company
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/your-account