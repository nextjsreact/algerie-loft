# Staging Environment Variables
NODE_ENV=staging

# Application URLs
NEXT_PUBLIC_APP_URL=https://staging.your-domain.com
NEXT_PUBLIC_INTERNAL_APP_URL=https://staging-app.your-domain.com

# CMS Configuration
NEXT_PUBLIC_SANITY_DATASET=staging

# Analytics (disabled in staging)
NEXT_PUBLIC_VERCEL_ANALYTICS=false
NEXT_PUBLIC_SPEED_INSIGHTS=false

# Feature Flags
NEXT_PUBLIC_BLOG_ENABLED=true
NEXT_PUBLIC_PORTFOLIO_ENABLED=true
NEXT_PUBLIC_CONTACT_FORMS_ENABLED=true
NEXT_PUBLIC_NEWSLETTER_ENABLED=false

# Security (less strict in staging)
NEXT_PUBLIC_RECAPTCHA_ENABLED=false