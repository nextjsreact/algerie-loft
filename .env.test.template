# =====================================================
# VARIABLES D'ENVIRONNEMENT POUR LES TESTS
# =====================================================
# Copiez ce fichier vers .env.test et remplissez les valeurs
# =====================================================

# =====================================================
# CONFIGURATION DE TEST
# =====================================================
NODE_ENV=test
TEST_BASE_URL=http://localhost:3000
TEST_API_URL=http://localhost:3000/api

# =====================================================
# BASE DE DONNÉES DE TEST (SUPABASE)
# =====================================================
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =====================================================
# CONFIGURATION DES TESTS
# =====================================================
# Timeout par défaut pour les tests (ms)
TEST_TIMEOUT=30000

# Nombre de workers pour les tests parallèles
TEST_WORKERS=1

# Nombre de tentatives en cas d'échec
TEST_RETRIES=1

# Mode debug pour les tests
TEST_DEBUG=false

# Capturer les vidéos des tests
TEST_VIDEO=false

# Capturer les traces des tests
TEST_TRACE=false

# =====================================================
# DONNÉES DE TEST
# =====================================================
# Email de test par défaut
TEST_USER_EMAIL=test@example.com

# Mot de passe de test par défaut
TEST_USER_PASSWORD=TestPassword123!

# Numéro de téléphone de test
TEST_USER_PHONE=+213555123456

# =====================================================
# CONFIGURATION DES PAIEMENTS DE TEST
# =====================================================
# Clés Stripe de test
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key

# Webhook secret pour les tests
STRIPE_WEBHOOK_SECRET=whsec_test_your_webhook_secret

# =====================================================
# CONFIGURATION DES NOTIFICATIONS DE TEST
# =====================================================
# Désactiver les vraies notifications en test
DISABLE_EMAIL_NOTIFICATIONS=true
DISABLE_SMS_NOTIFICATIONS=true
DISABLE_PUSH_NOTIFICATIONS=true

# =====================================================
# CONFIGURATION DU CACHE DE TEST
# =====================================================
# Redis de test (optionnel)
REDIS_URL=redis://localhost:6379/1

# Désactiver le cache en test
DISABLE_CACHE=true

# =====================================================
# CONFIGURATION DES LOGS DE TEST
# =====================================================
# Niveau de log pour les tests
LOG_LEVEL=error

# Désactiver les logs en test
DISABLE_LOGGING=true

# =====================================================
# CONFIGURATION DE SÉCURITÉ DE TEST
# =====================================================
# Clés JWT de test
JWT_SECRET=test-jwt-secret-key-for-integration-tests
NEXTAUTH_SECRET=test-nextauth-secret-key-for-integration-tests

# CSRF secret de test
CSRF_SECRET=test-csrf-secret-key

# =====================================================
# CONFIGURATION DES SERVICES EXTERNES DE TEST
# =====================================================
# Désactiver les services externes en test
DISABLE_EXTERNAL_SERVICES=true

# Google Maps API (optionnel pour les tests)
GOOGLE_MAPS_API_KEY=your-test-google-maps-key

# =====================================================
# CONFIGURATION DES ANALYTICS DE TEST
# =====================================================
# Désactiver Google Analytics en test
DISABLE_ANALYTICS=true

# ID Google Analytics de test
GOOGLE_ANALYTICS_ID=G-TEST123456

# =====================================================
# CONFIGURATION DES UPLOADS DE TEST
# =====================================================
# Répertoire temporaire pour les uploads de test
TEST_UPLOAD_DIR=/tmp/test-uploads

# Taille maximale des fichiers de test
TEST_MAX_FILE_SIZE=1048576

# =====================================================
# CONFIGURATION DE LA BASE DE DONNÉES DE TEST
# =====================================================
# Préfixe pour les tables de test
TEST_TABLE_PREFIX=test_

# Nettoyer la base après chaque test
CLEANUP_AFTER_TESTS=true

# Utiliser des transactions pour les tests
USE_TEST_TRANSACTIONS=true

# =====================================================
# CONFIGURATION DES MOCKS DE TEST
# =====================================================
# Mocker les services de paiement
MOCK_PAYMENT_SERVICES=true

# Mocker les services d'email
MOCK_EMAIL_SERVICES=true

# Mocker les services SMS
MOCK_SMS_SERVICES=true

# =====================================================
# CONFIGURATION DES TIMEOUTS DE TEST
# =====================================================
# Timeout pour les requêtes API (ms)
API_TIMEOUT=10000

# Timeout pour les requêtes de base de données (ms)
DB_TIMEOUT=5000

# Timeout pour les actions UI (ms)
UI_TIMEOUT=15000

# =====================================================
# CONFIGURATION DES NAVIGATEURS DE TEST
# =====================================================
# Navigateurs à tester
TEST_BROWSERS=chromium,firefox,webkit

# Résolutions d'écran à tester
TEST_VIEWPORTS=1920x1080,1366x768,375x667

# Mode headless
HEADLESS=true

# =====================================================
# CONFIGURATION DES RAPPORTS DE TEST
# =====================================================
# Format des rapports
TEST_REPORTER=html,json,junit

# Répertoire des rapports
TEST_REPORTS_DIR=./tests/reports

# Répertoire des résultats
TEST_RESULTS_DIR=./tests/results

# =====================================================
# CONFIGURATION CI/CD
# =====================================================
# Indicateur d'environnement CI
CI=false

# ID de build CI
BUILD_ID=local

# Branche Git
GIT_BRANCH=main

# =====================================================
# NOTES IMPORTANTES
# =====================================================
# 1. Ne jamais committer ce fichier avec de vraies valeurs
# 2. Utiliser des données de test uniquement
# 3. S'assurer que la base de données de test est isolée
# 4. Nettoyer les données après chaque test
# 5. Utiliser des mocks pour les services externes
# 6. Configurer des timeouts appropriés
# 7. Tester sur plusieurs navigateurs et résolutions
# 8. Capturer les erreurs et les logs pour le debug